<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ************ -->
    <!-- basic styles -->
    <!-- ************ -->

    <style name="MaterialNumberPickerInteger">
        <item name="mnp_valueInt">0</item>
        <item name="mnp_minInt">0</item>
        <item name="mnp_maxInt">100</item>
        <item name="mnp_stepSizeInt">1</item>
        <item name="mnp_stepSizeLargeInt">1</item>
        <item name="mnp_longPressRepeatClicks">true</item>
        <item name="mnp_buttonWidth">0dp</item>
        <item name="mnp_editTextStyle">@style/MaterialNumberPicker.EditTextStyle</item>
    </style>

    <style name="MaterialNumberPickerFloat">
        <item name="mnp_valueFloat">0.0</item>
        <item name="mnp_minFloat">0.0</item>
        <item name="mnp_maxFloat">10.0</item>
        <item name="mnp_stepSizeFloat">0.1</item>
        <item name="mnp_stepSizeLargeFloat">0.1</item>
        <item name="mnp_longPressRepeatClicks">true</item>
        <item name="mnp_buttonWidth">0dp</item>
        <item name="mnp_commas">-1</item>
        <item name="mnp_editTextStyle">@style/MaterialNumberPicker.EditTextStyle</item>
    </style>

    <style name="MaterialNumberPickerInteger.Horizontal">
        <item name="mnp_iconDown">@drawable/ic_baseline_keyboard_arrow_left_24</item>
        <item name="mnp_iconUp">@drawable/ic_baseline_keyboard_arrow_right_24</item>
        <item name="mnp_iconDownLarge">@drawable/ic_baseline_keyboard_double_arrow_left_24</item>
        <item name="mnp_iconUpLarge">@drawable/ic_baseline_keyboard_double_arrow_right_24</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:minHeight">@dimen/mnp_min_view_size</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="MaterialNumberPickerFloat.Horizontal">
        <item name="mnp_iconDown">@drawable/ic_baseline_keyboard_arrow_left_24</item>
        <item name="mnp_iconUp">@drawable/ic_baseline_keyboard_arrow_right_24</item>
        <item name="mnp_iconDownLarge">@drawable/ic_baseline_keyboard_double_arrow_left_24</item>
        <item name="mnp_iconUpLarge">@drawable/ic_baseline_keyboard_double_arrow_right_24</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:minHeight">@dimen/mnp_min_view_size</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="MaterialNumberPickerInteger.Vertical">
        <item name="mnp_iconDown">@drawable/ic_baseline_keyboard_arrow_down_24</item>
        <item name="mnp_iconUp">@drawable/ic_baseline_keyboard_arrow_up_24</item>
        <item name="mnp_iconDownLarge">@drawable/ic_baseline_keyboard_double_arrow_down_24</item>
        <item name="mnp_iconUpLarge">@drawable/ic_baseline_keyboard_double_arrow_up_24</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minWidth">@dimen/mnp_min_view_size</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="MaterialNumberPickerFloat.Vertical">
        <item name="mnp_iconDown">@drawable/ic_baseline_keyboard_arrow_down_24</item>
        <item name="mnp_iconUp">@drawable/ic_baseline_keyboard_arrow_up_24</item>
        <item name="mnp_iconDownLarge">@drawable/ic_baseline_keyboard_double_arrow_down_24</item>
        <item name="mnp_iconUpLarge">@drawable/ic_baseline_keyboard_double_arrow_up_24</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minWidth">@dimen/mnp_min_view_size</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <!-- ****** -->
    <!-- styles -->
    <!-- ****** -->

    <style name="MaterialNumberPickerInteger.Horizontal.Filled">
        <item name="android:background">@drawable/mtrl_background_filled</item>
    </style>

    <style name="MaterialNumberPickerFloat.Horizontal.Filled">
        <item name="android:background">@drawable/mtrl_background_filled</item>
    </style>

    <style name="MaterialNumberPickerInteger.Vertical.Filled">
        <item name="android:background">@drawable/mtrl_background_filled</item>
    </style>

    <style name="MaterialNumberPickerFloat.Vertical.Filled">
        <item name="android:background">@drawable/mtrl_background_filled</item>
    </style>

    <style name="MaterialNumberPickerInteger.Horizontal.Outlined">
        <item name="android:background">@drawable/mtrl_background_outlined</item>
    </style>

    <style name="MaterialNumberPickerFloat.Horizontal.Outlined">
        <item name="android:background">@drawable/mtrl_background_outlined</item>
    </style>

    <style name="MaterialNumberPickerInteger.Vertical.Outlined">
        <item name="android:background">@drawable/mtrl_background_outlined</item>
    </style>

    <style name="MaterialNumberPickerFloat.Vertical.Outlined">
        <item name="android:background">@drawable/mtrl_background_outlined</item>
    </style>

    <style name="MaterialNumberPickerInteger.Horizontal.None">
        <item name="android:background">@null</item>
    </style>

    <style name="MaterialNumberPickerFloat.Horizontal.None">
        <item name="android:background">@null</item>
    </style>

    <style name="MaterialNumberPickerInteger.Vertical.None">
        <item name="android:background">@null</item>
    </style>

    <style name="MaterialNumberPickerFloat.Vertical.None">
        <item name="android:background">@null</item>
    </style>

    <!-- ************* -->
    <!-- EditTextStyle -->
    <!-- ************* -->

    <style name="MaterialNumberPicker.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:gravity">center</item>
        <item name="android:editable">true</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="MaterialNumberPicker.EditTextStyle.Disabled">
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:selectable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:editable">false</item>
        <item name="android:clickable">false</item>
    </style>

</resources>